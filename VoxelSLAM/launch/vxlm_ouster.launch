<launch>
	<arg name="rviz" default="true" />
  <!--param name="/use_sim_time" value="true" /-->
	<!--node pkg="tf" type="static_transform_publisher" name="lidar"  args="0 0 0 0 0 0 base_link dcp2/os_sensor 10" /-->
	<rosparam command="load" file="$(find voxel_slam)/config/ouster.yaml"/>
	<param name="finish" value="false"/>
	<node pkg="voxel_slam" type="voxelslam" name="voxelslam" output="screen" >
	</node>     
  
	<group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find voxel_slam)/rviz_cfg/back.rviz" />
	</group>
     
</launch>
